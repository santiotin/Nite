<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.santiotin.nite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".PersonProfileActivity"></activity>
        <activity android:name=".MyFriendsActivity" />
        <activity android:name=".MyEventsActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity
            android:name=".ChangePasswordActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventDescriptionActivity"
            android:theme="@style/EventDescription" />
        <activity
            android:name=".PruebasActivity"
            android:theme="@style/EventDescription" />
        <activity android:name=".AssistantsActivity" />
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>