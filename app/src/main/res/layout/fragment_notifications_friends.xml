<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NotificationsFriendsFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgNoRequests"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-200dp"
            android:src="@drawable/nonotif" />

        <TextView
            android:id="@+id/tvNoNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_requests"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgNoRequests"
            android:layout_marginTop="30dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNotifFriends"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>

</FrameLayout>