<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NotificationsFriendsFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgNotFriendEvents"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_camping"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvNotFriendEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_notif"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imgNotFriendEvents"
                android:layout_marginTop="30dp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNotFriendEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>

</FrameLayout>