<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlSeeEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <com.subinkrishna.widget.CircularImageView
        android:id="@+id/img_card_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_marginStart="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/img_card_back">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/grey1"
            android:textSize="16sp"
            android:layout_below="@id/title"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgBtnList"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_list"
        android:background="?android:selectableItemBackgroundBorderless"
        android:tint="@color/grey"
        android:clickable="true"
        android:focusable="true"
        android:layout_toStartOf="@id/imgBtnTicket"
        android:layout_marginEnd="15dp" />

    <ImageButton
        android:id="@+id/imgBtnTicket"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_ticket"
        android:background="?android:selectableItemBackgroundBorderless"
        android:tint="@color/grey"
        android:clickable="true"
        android:focusable="true"
        android:layout_toStartOf="@id/btnVip"
        android:layout_marginEnd="15dp"/>


    <Button
        android:id="@+id/btnVip"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="@string/vip"
        android:textColor="@color/grey"/>







</RelativeLayout>